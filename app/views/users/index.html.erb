<p id="notice"><%= notice %></p>

<%= render 'users/user_sidebar', user: current_user %>
<%= render 'books/book_sidebar', book: @book %>


<div class="col-xs-9">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user|%>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
               <%= link_to "Show", user_path(user.id) %>
              </td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



